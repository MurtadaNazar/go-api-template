    "definitions": {
        "dto.UserCreateRequest": {
            "type": "object",
            "required": [
                "email",
                "first_name",
                "last_name",
                "password",
                "username"
            ],
            "properties": {
                "email": {
                    "description": "Email of the user\nRequired: true\nExample: john.doe@example.com",
                    "type": "string"
                },
                "first_name": {
                    "description": "FirstName of the user\nRequired: true\nExample: John",
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "last_name": {
                    "description": "LastName of the user\nRequired: true\nExample: Doe",
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "password": {
                    "description": "Password for the user account\nRequired: true\nExample: StrongP@ssw0rd",
                    "type": "string",
                    "minLength": 8
                },
                "second_name": {
                    "description": "SecondName of the user\nExample: Michael",
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "user_type": {
                    "description": "UserType defines the role of the user\nEnum: user, admin\nExample: user",
                    "type": "string",
                    "enum": [
                        "user",
                        "admin"
                    ]
                },
                "username": {
                    "description": "Username of the user\nRequired: true\nExample: johndoe123",
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 3
                }
            }
        },
        "dto.UserUpdateRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "description": "Email of the user\nExample: john.doe@example.com",
                    "type": "string"
                },
                "first_name": {
                    "description": "FirstName of the user\nExample: John",
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "last_name": {
                    "description": "LastName of the user\nExample: Doe",
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "password": {
                    "description": "Password for the user account\nExample: StrongP@ssw0rd",
                    "type": "string",
                    "minLength": 8
                },
                "second_name": {
                    "description": "SecondName of the user\nExample: Michael",
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "user_type": {
                    "description": "UserType defines the role of the user\nEnum: user, admin\nExample: user",
                    "type": "string",
                    "enum": [
                        "user",
                        "admin"
                    ]
                },
                "username": {
                    "description": "Username of the user\nExample: johndoe123",
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 3
                }
            }
        },
        "model.LoginRequest": {
            "type": "object",
            "required": [
                "email_or_username",
                "password"
            ],
            "properties": {
                "email_or_username": {
                    "description": "User email or username for login\nrequired: true\nexample: john.doe@example.com OR johndoe123\nmin length: 3\nmax length: 100",
                    "type": "string"
                },
                "password": {
                    "description": "User password for authentication\nrequired: true\nexample: mySecurePassword123!\nmin length: 8\nformat: password\nwriteOnly: true",
                    "type": "string"
                }
            }
        },
        "model.LoginResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "description": "Access JWT token for API authorization\nexample: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
                    "type": "string"
                },
                "refresh_token": {
                    "description": "Refresh JWT token for obtaining new access tokens\nexample: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
                    "type": "string"
                }
            }
        },
        "model.RefreshRequest": {
            "type": "object",
            "required": [
                "refresh_token"
            ],
            "properties": {
                "refresh_token": {
                    "description": "Refresh token obtained during login\nrequired: true\nexample: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
                    "type": "string"
                }
            }
        },
        "model.RefreshResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "description": "New access token for continued API access\nexample: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
                    "type": "string"
                },
                "refresh_token": {
                    "description": "New refresh token for future token rotations\nexample: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
                    "type": "string"
                }
            }
        },
        "response.ErrorResponse": {
            "type": "object",
            "properties": {
                "details": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                },
                "request_id": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "response.SuccessResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "request_id": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
