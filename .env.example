# Server configuration
# The address and port where your application will listen
SERVER_ADDR=:8080

# Database configuration
# Use PostgreSQL format: postgres://username:password@host:port/dbname?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@localhost:5432/go_platform_template?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=3600 # seconds

# Gin framework mode
# Options: debug, release, test
GIN_MODE=release

# Logger
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# File Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=files
